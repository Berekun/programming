<Page x:Class="Mikender.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mikender"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewUserPage">

    <StackPanel Orientation="Vertical" Height="auto" Width="auto">
        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
            <TextBlock Text="Nombre : " FontSize="20" Foreground="Black"> 
                                <TextBox x:Name="nameBox" FontSize="20" Foreground="Black"  Width="120" Height="30" TextChanged="nameBox_TextChanged">
                                    <TextBox.RenderTransform>
                                        <TranslateTransform X="0" Y="10"/>
                                    </TextBox.RenderTransform>
                                </TextBox>
            </TextBlock>
            <TextBlock Text="Edad : " FontSize="20" Foreground="Black"> 
                                <TextBox x:Name="ageBox"  FontSize="20" Foreground="Black" Width="120" Height="30" TextChanged="ageBox_TextChanged">
                                <TextBox.RenderTransform>
                                        <TranslateTransform X="0" Y="10"/>
                                    </TextBox.RenderTransform>
                                </TextBox>
            </TextBlock>
            <TextBlock Text="Descripcion : " FontSize="20" Foreground="Black"> 
                                <TextBox x:Name="descriptionBox" FontSize="20" Foreground="Black" Width="120" Height="30" TextChanged="descriptionBox_TextChanged">
                                <TextBox.RenderTransform>
                                        <TranslateTransform X="0" Y="10"/>
                                    </TextBox.RenderTransform>
                                </TextBox>
            </TextBlock>
            <TextBlock Text="Foto : " FontSize="20" Foreground="Black"> 
                                <TextBox x:Name="imageBox"  FontSize="20" Foreground="Black" Width="120" Height="30" TextChanged="imageBox_TextChanged">
                                <TextBox.RenderTransform>
                                        <TranslateTransform X="0" Y="10"/>
                                    </TextBox.RenderTransform>
                                </TextBox>
            </TextBlock>
            <TextBlock Text="Genero : " FontSize="20" Foreground="Black"> 
                                <TextBox x:Name="genderBox"  FontSize="20" Foreground="Black" Width="120" Height="30" TextChanged="genderBox_TextChanged">
                                <TextBox.RenderTransform>
                                        <TranslateTransform X="0" Y="10"/>
                                    </TextBox.RenderTransform>
                                </TextBox>
            </TextBlock>
            <TextBlock Text="Rating : " FontSize="20" Foreground="Black"> 
                                <TextBox x:Name="ratingBox" FontSize="20" Foreground="Black" Width="120" Height="30" TextChanged="ratingBox_TextChanged">
                                <TextBox.RenderTransform>
                                        <TranslateTransform X="0" Y="10"/>
                                    </TextBox.RenderTransform>
                                </TextBox>
            </TextBlock>
        </StackPanel>
    </StackPanel>
</Page>
